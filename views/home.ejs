<link rel="stylesheet" href="CSS/home.css">
<script src="https://kit.fontawesome.com/2250fa0f5a.js" crossorigin="anonymous"></script>
<div class="container">

    <main> 


        <div class="pos" >
            <div class="heading">
                <h1>TODO App</h1>
           </div>
    
    
            <form action="/create-todo" method="post" class="form-container">
    
                <div class="todo-details">
                    <label for="description" class="display-block"> DESCRIPTION</label>
                    <input required type="text" name="desc" placeholder="What do you need to do?" id="description
                        ">
                </div>
                <div class="todo-details-container">
                    <div class="todo-details">
                        <label for="category" class="display-block">CATEGORY</label>
                        <select name="category" id="category" required >
                            <option  disabled selected value="">Choose a category</option>
    
                            <option value="personal">Personal</option>
                            <option value="School">School</option>
                        </select>
                    </div>
                    <div class="todo-details">
                        <label for="due-date">DUE-DATE</label>
                        <input type="date" name="duedate" required>
                    </div>
    
    
                </div>
    
                <div class="button-container">
                    <div class="add-task">
                        <button type="submit" id="submit-button">
                            <i class="fa-solid fa-plus"></i><span>ADD TASK</span>
                        </button>
                    </div>
                    <div class="delete-task">
                        <button type="submit" id="delete-button">

                            <i class="fa-sharp fa-solid fa-trash"></i><span>DELETE TASKS</span> </a>
    
                        </button>
                    </div>
                      
    
                    
                </div>
            </form>
        </div>
       


        <div class="list">

            <ul>

                <%for(let i=0;i<todolist.length;i++){%>
                    
                    <li class="todo-list-container">
                        
                        <input type="checkbox" id="<%=todolist[i]._id%>" name="completed" class="completed">
                        <label for="<%=todolist[i]._id%>" class="todo-desc-duedate">
                           
                                <h3>
                                   
                                    <%=todolist[i].desc%>
                                </h3>
                                <i class="fa-solid fa-calendar-days"></i>
                                <span>
                                    <%=todolist[i].duedate%>
                                </span>
                           
                        </label>
                       

                        <div class="category">
                                
                            <%=todolist[i].category%>
                        </div>
                       
                    </li>
                    <%}%>

                </ul>
                
            </div>

        </main>
        
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous">
    </script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
      
<script src="JS/script.js"></script>
</div>